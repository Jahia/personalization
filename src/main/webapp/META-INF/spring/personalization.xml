<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean class="org.jahia.modules.personalization.actions.SetUserProperty">
        <property name="name" value="setUserProperty"/>
        <property name="requiredPermission" value="setUserProperty"/>
        <property name="userManagerService" ref="JahiaUserManagerService"/>
    </bean>

    <bean class="org.jahia.modules.personalization.actions.IncrementUserProperty">
        <property name="name" value="incrementUserProperty"/>
        <property name="requiredPermission" value="incrementUserProperty"/>
        <property name="userManagerService" ref="JahiaUserManagerService"/>
    </bean>

    <bean class="org.jahia.modules.personalization.actions.RemoveUserProperty">
        <property name="name" value="removeUserProperty"/>
        <property name="requiredPermission" value="removeUserProperty"/>
        <property name="userManagerService" ref="JahiaUserManagerService"/>
    </bean>

    <bean name="TrackingService" class="org.jahia.modules.personalization.tracking.TrackingService">

    </bean>

    <bean name="TrackingFilter" class="org.jahia.modules.personalization.tracking.TrackingFilter">
        <property name="priority" value="0"/>
        <property name="trackingCookieName" value="${jahiaTrackingCookieName:jahiaTrackingID}" />
        <property name="trackingSessionName" value="${jahiaTrackingSessionName:org.jahia.modules.personalization.trackingData}"/>
        <property name="trackingService" ref="TrackingService" />
        <property name="trackers">
            <list>
                <bean class="org.jahia.modules.personalization.tracking.trackers.SpamPostLimiterTracker" />
                <bean class="org.jahia.modules.personalization.tracking.trackers.UrlAndRefererTracker" />
                <bean class="org.jahia.modules.personalization.tracking.trackers.HostAndIpAddressTracker" />
                <bean class="org.jahia.modules.personalization.tracking.trackers.UserAgentTracker" />
                <bean class="org.jahia.modules.personalization.tracking.trackers.LocalesTracker" />
            </list>
        </property>
    </bean>

    <bean class="org.jahia.modules.personalization.tracking.ServletEventListener">
        <property name="trackingFilter" ref="TrackingFilter" />
        <property name="schedulerService" ref="SchedulerService" />
    </bean>

    <bean class="org.jahia.modules.personalization.tracking.TrackingHelper" factory-method="getInstance">
        <property name="trackingService" ref="TrackingService" />
    </bean>

</beans>